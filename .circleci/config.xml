version: 2.1

jobs:
  build-and-test:
    docker:
      - image: cimg/openjdk:11.0 # Or choose a later OpenJDK version
    steps:
      - checkout
      - run:
          name: Build and Test Maven Application
          command: |
            mvn clean install
      - store_test_results:
          path: target/surefire-reports # Store the test results for display in the CircleCI UI

workflows:
  version: 2
  build-test-workflow:
    jobs:
      - build-and-test
